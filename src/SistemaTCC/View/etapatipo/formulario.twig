{% extends 'layout.twig' %}
{% block content %}
    <h3>{{ titulo }}</h3>
    <form id="form-js">
        {% if id is defined %}
        <input type="hidden" name="id" value="{{ id }}" id="id" />
        {% endif %}
        <div class="row">
            <div class="col-xs-6">
                <div class="form-group">
                    <label class="control-label" for="nome">Nome</label>
                    <input type="text" class="form-control" name="nome" id="nome" value="{{ values.nome }}">
                    <span class="help-block"></span>
                </div>
            </div>
        </div>
        <hr>
        <div class="row">
        	<div class="col-xs-3">
                <button type="submit" class="btn btn-primary btn-lg btn-block">Salvar</button>
        	</div>
            <div class="col-xs-2">
                <a href="./etapatipo/" class="btn btn-default btn-lg btn-block">Cancelar</a>
            </div>
        </div>

    </form>
{% endblock %}
{% block scripts %}
<script src="./app/etapatipo/formulario.js"></script>
{% endblock %}
